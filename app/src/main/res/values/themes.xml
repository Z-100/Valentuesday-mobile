<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Valentuesday" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_0</item>
        <item name="colorPrimaryVariant">@color/purple_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Valentuesday.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Valentuesday.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Valentuesday.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="inputField">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:background">@drawable/input_background_neutral</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="text_h1">
        <item name="android:textSize">70sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_thin</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/purple_0</item>
    </style>

    <style name="text_h2">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_thin</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_1</item>
    </style>

    <style name="text_h3">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_thin</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/purple_1</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:background">@drawable/input_background_neutral</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>